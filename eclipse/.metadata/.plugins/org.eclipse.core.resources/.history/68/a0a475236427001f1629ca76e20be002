/*     */   private void doDraw(float f, GlyphPage glyphPage) {
/* 281 */     if (this.strikethroughStyle) {
/* 282 */       Tessellator tessellator = Tessellator.getInstance();
/* 283 */       WorldRenderer worldrenderer = tessellator.getWorldRenderer();
